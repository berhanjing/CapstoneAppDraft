<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#B5C5C4"
        />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button"
        android:tint="#44484E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/done_tick"
        android:background="@color/fui_transparent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="340dp"
        android:id="@+id/button_done"
        />

    <TextView
        android:id="@+id/headingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:text="EDIT PROFILE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textScaleX="1.1"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="160dp">
        <ImageView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/profile_pic"
            android:src="@drawable/profile_pic"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/edit_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="260dp"
        android:background="@color/fui_transparent"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_semibold"
        android:text="Edit Photo"
        android:textAllCaps="false"
        android:textColor="#6BAFEE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="330dp"
        />

    <EditText
        android:id="@+id/country_field"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/field_box"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:hint="Country Name"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#A5A5A5"
        android:textSize="18sp"
        android:paddingLeft="20sp"/>

    <TextView
        android:id="@+id/motorcycle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Motorcycle Model:"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:textAlignment="viewEnd"
        />

    <EditText
        android:id="@+id/motorcycle_field"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/field_box"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:hint="Model"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#A5A5A5"
        android:textSize="18sp"
        android:paddingLeft="20sp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigator"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconSize="25dp"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>