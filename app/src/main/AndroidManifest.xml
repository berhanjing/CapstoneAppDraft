<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstoneappdraft">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GoogleProfileActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstPageActivity"></activity>
        <activity android:name=".SignupActivity"></activity>
        <activity android:name=".LoginActivity"
            android:noHistory = "true"></activity>
        <activity android:name=".HomepageActivity"></activity>
        <activity android:name=".MaintenanceRecordsActivity"></activity>
        <activity android:name=".LeaderBoardActivity"></activity>
        <activity android:name=".ProfileActivity"></activity>
        <activity android:name=".CreateMaintenanceRecordActivity"></activity>
        <activity android:name=".CalendarActivity"></activity>
        <activity android:name=".TimePickerActivity"></activity>
        <activity android:name=".RecordDetailActivity"></activity>
        <activity android:name=".ScoreboardActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>